{% block body %}

    <style>

        .properties .container {
            padding: 0px;
        }

        .card_property_line {
            display: flex;
            justify-content: center;
            margin: 15px;
            box-shadow: 1px 1px 3px #555;
        }

        .card_property_line .box_img {
            position: relative;
            overflow: hidden;
        }

        .card_property_line .box_info {
            position: relative;
            margin: 15px;
        }

        .card_property_line .box_info header {
            display: flex;
            justify-content: space-between;
        }

        .card_property_line .box_info .tag.price{
            margin-right: 20px;
        }

        .card_property_line .box_info .box_miniature {
            position: absolute;
            display: flex;
            bottom: -15px;
        }

        .card_property_line .box_info .mini_img {
            margin: 0px 10px 10px 0px;
            float: bottom;
            max-width: 15%;
            text-align: center;
        }

        .card_property_line .box_info h3{
            margin: 0px 0px 0px 0px;
            font-size: 1.5vw;
        }

        .card_property_line .box_info p{
            margin: 0px 0px 10px 0px;
            text-align: justify;
            width: 90%;
        }

        .card_property_line .box_info p .link-arrow{
            margin: 0px 0px 0px 30px;
        }

        .card_property_line .box_info .info{
            display: flex;
            background: white;
        }

        .card_property_line .box_info dd  {
            margin-left: 5px;
            margin-right: 30px;
        }

        .ribbon {
            box-shadow: 0px 1px 1px rgba(0, 0, 0, 0.2);
            transform: translate3d(0, 0, 1px) rotate(45deg);
            backface-visibility: hidden;
            background-color: #1396e2;
            color: #fff;
            font-weight: bold;
            font-size: 12px;
            padding: 6px;
            position: absolute;
            z-index: 3;
            right: -35px;
            top: 30px;
            width: 160px;
            text-align: center;
            margin: auto;
            height: 30px;
            bottom: inherit;
            left: inherit;
        }

        .tag.status {
            -moz-transition: 0.4s;
            -webkit-transition: 0.4s;
            transition: 0.4s;
            -moz-border-radius: 0px;
            -webkit-border-radius: 0px;
            border-radius: 0px;
            background-color: rgba(0, 0, 0, 0.6);
            color: #fff;
            left: 13px;
            font-size: 12px;
            padding: 6px 9px;
            position: absolute;
            top: 15px;
            z-index: 1;
        }

        .tag.status:after {
            bottom: -4px;
            width: 0;
            height: 0;
            border-style: solid;
            border-width: 4px 4px 0 0;
            border-color: rgba(0, 0, 0, 0.6) transparent transparent transparent;
            content: "";
            left: 0;
            position: absolute;
        }

        @media only screen and (max-width: 1680px) {
            .card_property_line .box_info p {
                font-size: 15px;
            }
        }

        @media only screen and (max-width: 1139px) {
            .card_property_line .box_info p, .card_property_line .box_info dd, .card_property_line .box_info dt {
                font-size: 13px;
            }
        }

    </style>

