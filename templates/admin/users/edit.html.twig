{% extends 'base.html.twig' %}

{% block title %}Modifier l'utilisateur{% endblock %}

{% block body %}

    <div class="container mt-4">
        <h1>Modifier l'utilisateur</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {{ form_start(editform) }}
        <div class="row">
            <div class="col-md-4">{{ form_row(editform.email) }}</div>
            <div class="col-md-4">{{ form_row(editform.roles) }}</div>
        </div>

        {{ form_rest(editform) }}
        <button class="btn btn-warning">Editer</button>
        {{ form_end(editform) }}
    </div>




{% endblock %}
