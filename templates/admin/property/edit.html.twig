{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

    <div class="container mt-4">
        <h1>Editer le bien</h1>

        {{ form_start(form) }}
        <div class="row">
            <div class="col-md-4">{{ form_row(form.titre) }}</div>
            <div class="col-md-4">{{ form_row(form.surface) }}</div>
            <div class="col-md-4">{{ form_row(form.prix) }}</div>
        </div>
        <div class="row">
            <div class="col-md-2">{{ form_row(form.pieces) }}</div>
            <div class="col-md-2">{{ form_row(form.chambres) }}</div>
            <div class="col-md-2">{{ form_row(form.chauffage) }}</div>
            <div class="col-md-2">{{ form_row(form.etages) }}</div>
        </div>
        <div class="row">
            <div class="col-md-5">{{ form_row(form.adresse) }}</div>
            <div class="col-md-5">{{ form_row(form.ville) }}</div>
            <div class="col-md-5">{{ form_row(form.code_postal) }}</div>
            <div class="col-md-5">{{ form_row(form.vendu) }}</div>
        </div>
        {{ form_rest(form) }}
        <button class="btn btn-primary">Editer</button>
        {{ form_end(form) }}
    </div>

{% endblock %}


{% block stylesheets %}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.12/css/select2.min.css" rel="stylesheet" />

{% endblock %}

{% block javascripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.12/js/select2.min.js"></script>


    <script>
        $('select').select2();
    </script>
{% endblock %}