{% extends 'base.html.twig' %}

{% block title property.titre %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <div class="col-md-8">

                </div>
                <div class="col-md-4">
                    <h1>{{ property.titre }}</h1>
                    <h2>{{ property.pieces }} pièces - {{ property.surface }} m2</h2>
                    <div class="text-danger" style="font-weight: bold; font-size: 2rem">{{ property.formattedPrix }}€
                    </div>
                    <a href="#" class="btn btn-default">Contacter l'agence</a>
                </div>
            </div>
        </div>
    </div>
    <div class="container mt-4">
        <p>
            {{ property.description | nl2br }}
        </p>

        <div class="row">
            <div class="col-md-8">
                <h2>Caractéristiques</h2>
                <table class="table table-striped">
                    <tr>
                        <td>Surface habitable</td>
                        <td>{{ property.surface }} m2</td>
                    </tr>
                    <tr>
                        <td>Pièces</td>
                        <td>{{ property.pieces }}</td>
                    </tr>
                    <tr>
                        <td>Chambres</td>
                        <td>{{ property.chambres }}</td>
                    </tr>
                    <tr>
                        <td>Étage</td>
                        <td>{{ property.etages }}</td>
                    </tr>
                    <tr>
                        <td>Chauffage</td>
                        <td>{{ property.chauffage }}</td>
                    </tr>
                </table>
            </div>
            <div class="col-md-4">
                <h2>Spécificités</h2>
            </div>
        </div>
    </div>
{% endblock %}